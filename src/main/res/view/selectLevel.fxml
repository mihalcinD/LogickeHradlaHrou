<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0"
            minWidth="900.0" style="-fx-background-color: #333845;" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="main.java.steakoverflow.controller.Controller_SelectLevel">
    <bottom>
        <Button mnemonicParsing="false" onAction="#switchSceneToMenu"
                style="-fx-background-color: FF8048; -fx-font-size: 36px; -fx-font-weight: bold;" text="Menu"
                textFill="WHITE" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0"/>
            </BorderPane.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </bottom>
    <top>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 36; -fx-font-weight: bold;"
              text="Levely" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <HBox fx:id="hbox" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0"
              BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#switchSceneToLevel"
                        style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: FF9849;" text="1"
                        textFill="WHITE" userData="1">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#switchSceneToLevel"
                        style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: FF7810;" text="2"
                        textFill="WHITE" userData="2">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#switchSceneToLevel"
                        style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: E46300;" text="3"
                        textFill="WHITE" userData="3">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets top="30.0"/>
            </BorderPane.margin>
        </HBox>
    </center>
</BorderPane>
