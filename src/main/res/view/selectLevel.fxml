<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0"
            minWidth="800.0" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #333845;"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="main.java.steakoverflow.controller.Controller_SelectLevel">
    <bottom>
        <Button mnemonicParsing="false" onAction="#switchSceneToMenu" text="Menu" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
    <top>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 36; -fx-font-weight: bold;"
              text="Levely" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#switchSceneToLevel" text="1" userData="1"/>
                <Button mnemonicParsing="false" onAction="#switchSceneToLevel" text="2" userData="2"/>
                <Button mnemonicParsing="false" onAction="#switchSceneToLevel" text="3" userData="3"/>
            </children>
            <BorderPane.margin>
                <Insets top="30.0"/>
            </BorderPane.margin>
        </HBox>
    </center>
</BorderPane>
